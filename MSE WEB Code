    <div class="legende">
        <h3>Legende & Regeln</h3>
        <ul>
            <li><strong>10er und 20er Dellen</strong> werden nicht gez√§hlt (gem√§√ü Allianz Guide)</li>
            <li><strong>Lackstufe 4</strong> wird standardm√§√üig verwendet, au√üer bei Lackriss mit wenigen Dellen</li>
            <li><strong>Klasse 5 Instandsetzungszeiten</strong> d√ºrfen nicht √ºber 16h gehen (bei Hauben nicht √ºber 5,5h)</li>
            <li><strong>Hohlraumkonservierung</strong> pauschal 15‚Ç¨, nur bei Erneuerung von Karosserieteilen √ºberschreiten</li>
            <li><strong>Zuschlag Aluminium</strong> 25% bei Aluminiumteilen</li>
            <li><strong>Zuschlag Klebetechnik</strong> 30% bei Dachholmen und bauartbedingter Unzug√§nglichkeit</li>
            <li><strong>Vordr√ºcken</strong> entf√§llt bei Dellen ‚â§20mm und Eindringtiefe <0,2mm</li>
            <li><strong>Wirtschaftlichkeit</strong> ist immer zu pr√ºfen (ggf. PTP w√§hlen)</li>
            <li>Ab <strong>60% des Wiederbeschaffungswertes</strong> ist eine Restwertabfrage erforderlich</li>
            <li><strong>Demontage</strong> ist immer erforderlich, wenn Zerlegearbeiten notwendig sind</li>
            <li><strong>10 AW (Arbeitswerte)</strong> entsprechen <strong>1 Stunde</strong> Arbeitszeit</li>
        </ul>
    </div>
    
    <div class="signature">
        <span class="copyright">C</span> PDR TEAM GmbH<br>
        Ersteller: Seif Sherif
    </div>

    <script>
        // Durchschnittliche Neuwert-Preise f√ºr Bauteile (Quelle: Internetrecherche)
        const NEUWERTE = {
            'Motorhaube': 800,
            'Kotfl√ºgel links': 450,
            'Kotfl√ºgel rechts': 450,
            'T√ºr links': 1200,
            'T√ºr rechts': 1200,
            'Heckklappe': 1000,
            'Seitenwand links': 1500,
            'Seitenwand rechts': 1500,
            'Dachholm links': 600,
            'Dachholm rechts': 600,
            'Dach': 2000
        };

        document.getElementById('calculate-btn').addEventListener('click', function() {
            const stundensatz = parseFloat(document.getElementById('stundensatz').value);
            if (isNaN(stundensatz) || stundensatz <= 0) {
                alert("Bitte geben Sie einen g√ºltigen Stundensatz ein!");
                return;
            }
            
            calculateBauteil('haube', 'Motorhaube', stundensatz);
            calculateBauteil('kotfluegel-links', 'Kotfl√ºgel links', stundensatz);
            calculateBauteil('kotfluegel-rechts', 'Kotfl√ºgel rechts', stundensatz);
            calculateBauteil('tuer-links', 'T√ºr links', stundensatz);
            calculateBauteil('tuer-rechts', 'T√ºr rechts', stundensatz);
            calculateBauteil('heckklappe', 'Heckklappe', stundensatz);
            calculateBauteil('seitenwand-links', 'Seitenwand links', stundensatz);
            calculateBauteil('seitenwand-rechts', 'Seitenwand rechts', stundensatz);
            calculateBauteil('dachholm-links', 'Dachholm links', stundensatz);
            calculateBauteil('dachholm-rechts', 'Dachholm rechts', stundensatz);
            calculateBauteil('dach', 'Dach', stundensatz);
        });
        
        function calculateBauteil(prefix, bauteilName, stundensatz) {
            const material = document.getElementById(`${prefix}-material`).value;
            const dellen30 = parseInt(document.getElementById(`${prefix}-30`).value) || 0;
            const dellen50 = parseInt(document.getElementById(`${prefix}-50`).value) || 0;
            const gesamtDellen = dellen30 + dellen50;
            
            // Neuwert bestimmen (gesch√§tzter Wert oder manuelle Eingabe)
            let neuwert = NEUWERTE[bauteilName];
            const manualNeuwertInput = document.getElementById(`${prefix}-neuwert-input`).value;
            if (manualNeuwertInput && !isNaN(manualNeuwertInput) && parseFloat(manualNeuwertInput) > 0) {
                neuwert = parseFloat(manualNeuwertInput);
            }
            document.getElementById(`${prefix}-neuwert`).textContent = neuwert + '‚Ç¨';
            
            // Faktoren f√ºr die AW-Berechnung je nach Bauteil
            let awFaktor = 0;
            switch(bauteilName) {
                case 'Motorhaube': awFaktor = 0.5; break;
                case 'Kotfl√ºgel links':
                case 'Kotfl√ºgel rechts': awFaktor = 0.4; break;
                case 'T√ºr links':
                case 'T√ºr rechts': awFaktor = 0.45; break;
                case 'Heckklappe': awFaktor = 0.5; break;
                case 'Seitenwand links':
                case 'Seitenwand rechts': awFaktor = 0.6; break;
                case 'Dachholm links':
                case 'Dachholm rechts': awFaktor = 0.4; break;
                case 'Dach': awFaktor = 0.7; break;
            }
            
            // AW berechnen (10 AW = 1 Stunde)
            let aw = gesamtDellen * awFaktor;
            
            // Manuelle AW-Eingabe pr√ºfen und ggf. verwenden
            const manualAwInput = document.getElementById(`${prefix}-aw-input`).value;
            if (manualAwInput && !isNaN(manualAwInput) && parseFloat(manualAwInput) >= 0) {
                aw = parseFloat(manualAwInput);
            }
            
            const stunden = aw / 10;
            
            // Aluminium-Zuschlag
            const aluZuschlag = material === 'aluminium' ? 1.25 : 1;
            
            // Bauteil-spezifische Logik
            let zerlegearbeiten = '-';
            let demontage = 'Nein';
            let klebetechnik = 'Nein';
            let zuschlagAlu = material === 'aluminium' ? '25%' : '0%';
            let vordruecken = dellen50 > 0 ? 'Ja' : 'Nein';
            let lackierung = 'Nein';
            let lackstufe = '4';
            let hohlraum = '15‚Ç¨';
            let reparaturweg = 'Sanfte Instandsetzung';
            
            // Wirtschaftlichkeitspr√ºfung f√ºr Lackierung
            if (bauteilName === 'Motorhaube') {
                if (stunden > 5.5) {
                    reparaturweg = 'PTP Instandsetzung (Lackierung notwendig)';
                    lackierung = 'Ja';
                    // Wenn Lackierung notwendig ist, muss auch Vordr√ºcken aktiviert sein
                    vordruecken = 'Ja';
                }
            } else {
                if (stunden > 16) {
                    reparaturweg = 'PTP Instandsetzung (Lackierung notwendig)';
                    lackierung = 'Ja';
                    // Wenn Lackierung notwendig ist, muss auch Vordr√ºcken aktiviert sein
                    vordruecken = 'Ja';
                }
            }
            
            // Schadenh√∂he berechnen (unterschiedlich f√ºr PDR und PTP)
            let schadenhoehePDR = 0;
            let schadenhoehePTP = 0;
            
            if (lackierung === 'Ja') {
                // Bei PTP: 70% der AW f√ºr Instandsetzung + Lackkosten (30% des Neuwertes)
                schadenhoehePTP = (stunden * stundensatz * 0.7 * aluZuschlag) + (neuwert * 0.3);
                schadenhoehePDR = (stunden * stundensatz * aluZuschlag);
            } else {
                // Normale PDR Berechnung
                schadenhoehePDR = (stunden * stundensatz * aluZuschlag);
                schadenhoehePTP = schadenhoehePDR; // Falls kein Unterschied
            }
            
            // Wirtschaftlichkeitspr√ºfung: Vergleich mit Neuwert
            let schadenhoeheFinal = schadenhoehePDR;
            let reparaturArt = 'PDR';
            
            if (schadenhoehePDR > neuwert * 0.9) {
                // Wenn Reparatur mehr als 90% des Neuwertes kostet
                reparaturweg = 'Neubeschaffung wirtschaftlicher';
                schadenhoeheFinal = neuwert;
                reparaturArt = 'Neubeschaffung';
            } else if (lackierung === 'Ja' && schadenhoehePTP < schadenhoehePDR * 1.2) {
                // Wenn PTP nicht viel teurer ist als PDR (bis zu 20%)
                schadenhoeheFinal = schadenhoehePTP;
                reparaturArt = 'PTP';
            }
            
            // Bauteil-spezifische Zerlegearbeiten
            switch(bauteilName) {
                case 'Motorhaube':
                    if (gesamtDellen <= 30) {
                        zerlegearbeiten = 'D√§mmmate';
                        demontage = 'Nein';
                    } else {
                        zerlegearbeiten = 'D√§mmmate';
                        demontage = 'Ja';
                    }
                    break;
                    
                case 'Kotfl√ºgel links':
                case 'Kotfl√ºgel rechts':
                    if (gesamtDellen <= 10) {
                        zerlegearbeiten = 'Nein';
                        demontage = 'Nein';
                    } else {
                        zerlegearbeiten = 'Radhausverkleidung';
                        demontage = 'Ja';
                    }
                    break;
                    
                case 'T√ºr links':
                case 'T√ºr rechts':
                    zerlegearbeiten = gesamtDellen <= 15 ? 'Schachtleiste' : 'Schachtleiste, T√ºrverkleidung';
                    demontage = 'Ja';
                    break;
                    
                case 'Heckklappe':
                    zerlegearbeiten = 'Innenverkleidung, 3. Bremsleuchte';
                    demontage = 'Ja';
                    break;
                    
                case 'Seitenwand links':
                case 'Seitenwand rechts':
                    if (gesamtDellen <= 15) {
                        zerlegearbeiten = 'Nein';
                        klebetechnik = 'Ja';
                        demontage = 'Nein';
                    } else {
                        zerlegearbeiten = 'Innenverkleidung, R√ºckleuchte';
                        demontage = 'Ja';
                    }
                    break;
                    
                case 'Dachholm links':
                case 'Dachholm rechts':
                    zerlegearbeiten = 'Nein';
                    klebetechnik = 'Ja';
                    demontage = 'Nein';
                    break;
                    
                case 'Dach':
                    if (gesamtDellen <= 40) {
                        zerlegearbeiten = 'Nein';
                        klebetechnik = 'Ja';
                        demontage = 'Nein';
                    } else if (gesamtDellen <= 100) {
                        zerlegearbeiten = 'Dachhimmel incl. D√§mmmatten';
                        demontage = 'Ja';
                    } else {
                        zerlegearbeiten = 'Dachhimmel incl. D√§mmmatten, Dachreling, Antenne, Heckklappe';
                        demontage = 'Ja';
                    }
                    break;
            }
            
            // Ergebnisse anzeigen
            document.getElementById(`${prefix}-aw`).textContent = aw.toFixed(1);
            document.getElementById(`${prefix}-zerlege`).textContent = zerlegearbeiten;
            document.getElementById(`${prefix}-demontage`).textContent = demontage;
            document.getElementById(`${prefix}-klebetechnik`).textContent = klebetechnik;
            document.getElementById(`${prefix}-alu`).textContent = zuschlagAlu;
            document.getElementById(`${prefix}-vordr√ºcken`).textContent = vordruecken;
            document.getElementById(`${prefix}-lackierung`).textContent = lackierung;
            document.getElementById(`${prefix}-lackstufe`).textContent = lackstufe;
            document.getElementById(`${prefix}-hohlraum`).textContent = hohlraum;
            
            // Reparaturweg mit Warnung wenn Neubeschaffung wirtschaftlicher
            const reparaturwegElement = document.getElementById(`${prefix}-reparaturweg`);
            reparaturwegElement.textContent = reparaturweg;
            if (reparaturweg === 'Neubeschaffung wirtschaftlicher') {
                reparaturwegElement.classList.add('error');
                reparaturwegElement.classList.remove('highlight');
            } else {
                reparaturwegElement.classList.remove('error');
                reparaturwegElement.classList.add('highlight');
            }
            
            // Schadenh√∂he anzeigen
            const schadenhoeheElement = document.getElementById(`${prefix}-schadenhoehe`);
            if (reparaturArt === 'Neubeschaffung') {
                schadenhoeheElement.innerHTML = 
                    '<span class="error">' + schadenhoeheFinal.toFixed(2) + '‚Ç¨</span> <span style="font-weight:normal">(' + reparaturArt + ')</span>';
            } else if (reparaturArt === 'PTP') {
                schadenhoeheElement.innerHTML = 
                    '<span class="warning">' + schadenhoeheFinal.toFixed(2) + '‚Ç¨</span> <span style="font-weight:normal">(' + reparaturArt + ')</span>';
            } else {
                schadenhoeheElement.innerHTML = 
                    schadenhoeheFinal.toFixed(2) + '‚Ç¨ <span style="font-weight:normal">(' + reparaturArt + ')</span>';
            }
            
            document.getElementById(`${prefix}-stunden`).textContent = stunden.toFixed(1);
        }
    </script>
</body>
</html>
